{
  "components/category/sidebar": "<!-- Wrapper for category navigation -->\r\n<div class=\"responsive-category-nav\">\r\n  {{#if category.subcategories}}\r\n    <div class=\"category-nav facet-list\">\r\n      <h4 class=\"facet-list-title\">{{lang 'category.sub_categories'}}</h4>\r\n      <ul class=\"category-nav-list\">\r\n        {{#each category.subcategories}}\r\n          <li class=\"facet-item\">\r\n            <a href=\"{{url}}\">{{name}}</a>\r\n          </li>\r\n        {{/each}}\r\n      </ul>\r\n    </div>\r\n  {{/if}}\r\n</div>\r\n{{#if category.subcategories}}\r\n<!-- Dropdown Button for screens below 1000px -->\r\n<button id=\"dropdown-toggle\" class=\"dropdown-toggle\">Categories</button>\r\n\r\n<!-- Dropdown Menu for screens below 1000px -->\r\n<div id=\"dropdown-menu\" class=\"dropdown-menu\">\r\n  <ul class=\"category-nav-list\">\r\n    {{#each category.subcategories}}\r\n      <li class=\"facet-item\">\r\n        <a href=\"{{url}}\">{{name}}</a>\r\n      </li>\r\n    {{/each}}\r\n  </ul>\r\n</div>\r\n{{/if}}\r\n\r\n{{#if category.faceted_search_enabled}}\r\n  <span class=\"link faceted-search-toggle\" data-faceted-search-toggle>\r\n    {{lang 'faceted_search.toggle'}}\r\n    <span class=\"facet-list-toggle\">\r\n      <svg class=\"icon icon-plus\">\r\n        <use xlink:href=\"#icon-plus\" />\r\n      </svg>\r\n      <svg class=\"icon icon-minus\">\r\n        <use xlink:href=\"#icon-minus\" />\r\n      </svg>\r\n    </span>\r\n  </span>\r\n  <div class=\"faceted-search\" data-faceted-search>\r\n    {{#each category.facets}}\r\n      {{#if visible}}\r\n        {{#if items}}\r\n          <div class=\"facet-list {{display}}\" data-facet-filter>\r\n            <h4 class=\"facet-list-title {{#unless start_collapsed}}is-open{{/unless}}\" data-facet-toggle>\r\n              {{title}}\r\n              <span class=\"facet-list-toggle\"></span>\r\n            </h4>\r\n            {{{dynamicComponent 'components/faceted-search/facets'}}}\r\n            {{#if remove_url}}\r\n              <a class=\"link facet-remove\" href=\"{{remove_url}}\" data-faceted-search-facet data-facet-remove>\r\n                {{lang 'faceted_search.clear'}}\r\n              </a>\r\n            {{/if}}\r\n          </div>\r\n        {{/if}}\r\n        {{#compare facet 'price'}}\r\n          <div class=\"facet-list {{display}}\" data-facet-filter>\r\n            <h4 class=\"facet-list-title {{#unless start_collapsed}}is-open{{/unless}}\" data-facet-toggle>\r\n              {{title}}\r\n              <span class=\"facet-list-toggle\"></span>\r\n            </h4>\r\n            {{{dynamicComponent 'components/faceted-search/facets'}}}\r\n            {{#if remove_url}}\r\n              <a class=\"link facet-remove\" href=\"{{remove_url}}\" data-faceted-search-facet data-facet-remove>\r\n                {{lang 'faceted_search.clear'}}\r\n              </a>\r\n            {{/if}}\r\n          </div>\r\n        {{/compare}}\r\n      {{/if}}\r\n    {{/each}}\r\n  </div>\r\n{{else}}\r\n  {{> components/category/shop-by-price shop_by_price=category.shop_by_price category_url=category.url }}\r\n  {{#if theme_settings.category-shop-by-brands}}\r\n    {{> components/category/shop-by-brand category_url=category.url}}\r\n  {{/if}}\r\n{{/if}}\r\n<!-- HTML for Eco Properties Filter Section -->\r\n<div class=\"eco-properties\">\r\n  <label class=\"filter-option\">\r\n    <input type=\"checkbox\" id=\"filter-reusable\" /> Reusable\r\n    <img src=\"https://thumbs.dreamstime.com/z/percent-recycled-reusable-product-icon-vector-graphic-design-logo-website-social-media-mobile-app-ui-illustration-percent-264862796.jpg\" alt=\"Reusable Icon\" class=\"filter-icon\" />\r\n  </label>\r\n  <label class=\"filter-option\">\r\n    <input type=\"checkbox\" id=\"filter-recycle\" /> Recycle\r\n    <img src=\"https://cdn11.bigcommerce.com/s-6yvytzf4lr/images/stencil/original/image-manager/icons8-recycle-24.png?t=1718392046\" alt=\"Recycle Icon\" class=\"filter-icon\" />\r\n  </label>\r\n</div>\r\n<style>\r\n/* Hide the dropdown menu by default */\r\n#dropdown-menu {\r\n  display: none;\r\n  transition: max-height 0.3s ease-out; /* Smooth transition for the dropdown */\r\n  overflow: hidden;\r\n  max-height: 0; /* Start with no height */\r\n}\r\n\r\n/* Default state: Hide everything */\r\n.responsive-category-nav,\r\n#dropdown-toggle,\r\n#dropdown-menu {\r\n  display: none;\r\n}\r\n\r\n/* For screens above 1000px: show the category navigation directly */\r\n@media (min-width: 1000px) {\r\n  .responsive-category-nav {\r\n    display: block;\r\n  }\r\n}\r\n\r\n/* For screens below 1000px: show the toggle button and use the dropdown menu */\r\n@media (max-width: 999px) {\r\n  #dropdown-toggle {\r\n    display: block;\r\n  }\r\n  #dropdown-menu.expanded {\r\n    display: block;\r\n    max-height: 500px; /* Adjust based on the content's height */\r\n  }\r\n}\r\n\r\n/* Dropdown menu styling */\r\n#dropdown-menu .category-nav-list {\r\n  list-style: none;\r\n  padding: 0;\r\n  margin: 0;\r\n}\r\n\r\n#dropdown-menu .category-nav-list .facet-item {\r\n  padding: 12px 16px;\r\n  border-bottom: 1px solid #ddd;\r\n}\r\n\r\n#dropdown-menu .category-nav-list .facet-item a {\r\n  text-decoration: none;\r\n  color: #333;\r\n  display: block;\r\n}\r\n\r\n#dropdown-toggle {\r\n  background-color: #ffffff;\r\n  color: rgb(121, 121, 121);\r\n  padding: 10px;\r\n  border: none;\r\n  cursor: pointer;\r\n  width: 100%;\r\n  text-align: center;\r\n}\r\n\r\n#dropdown-toggle:focus {\r\n  outline: none;\r\n}\r\n\r\n/* SCSS for Eco Properties Filter Section */\r\n.eco-properties {\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 10px;\r\n  padding: 20px;\r\n  background-color: #ffffff;\r\n  border-radius: 8px;\r\n  border: 1px solid #ffffff;\r\n\r\n  .filter-option {\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: space-between;\r\n    padding: 10px;\r\n    background-color: #e0f7fa;\r\n    border-radius: 4px;\r\n\r\n    &:nth-child(2) {\r\n      background-color: #e8f5e9;\r\n    }\r\n\r\n    input[type=\"checkbox\"] {\r\n      margin-right: 10px;\r\n    }\r\n\r\n    .filter-icon {\r\n      width: 24px;\r\n      height: 24px;\r\n    }\r\n  }\r\n}\r\n</style>\r\n\r\n<script>\r\ndocument.addEventListener(\"DOMContentLoaded\", function() {\r\n  var toggleButton = document.getElementById(\"dropdown-toggle\");\r\n  var dropdownMenu = document.getElementById(\"dropdown-menu\");\r\n\r\n  toggleButton.addEventListener(\"click\", function() {\r\n    // Toggle the expanded state of the dropdown menu\r\n    if (dropdownMenu.classList.contains(\"expanded\")) {\r\n      dropdownMenu.classList.remove(\"expanded\");\r\n      dropdownMenu.style.maxHeight = \"0\"; // Collapse the menu\r\n    } else {\r\n      dropdownMenu.classList.add(\"expanded\");\r\n      dropdownMenu.style.maxHeight = dropdownMenu.scrollHeight + \"px\"; // Expand to fit content\r\n    }\r\n  });\r\n\r\n  // Optional: Close the dropdown if clicked outside\r\n  window.addEventListener(\"click\", function(event) {\r\n    if (!event.target.matches('#dropdown-toggle')) {\r\n      if (dropdownMenu.classList.contains(\"expanded\")) {\r\n        dropdownMenu.classList.remove(\"expanded\");\r\n        dropdownMenu.style.maxHeight = \"0\";\r\n      }\r\n    }\r\n  });\r\n});\r\n\r\ndocument.addEventListener('DOMContentLoaded', function () {\r\n  const reusableCheckbox = document.getElementById('filter-reusable');\r\n  const recycleCheckbox = document.getElementById('filter-recycle');\r\n  const productCards = document.querySelectorAll('.product-grid-item');\r\n  const sortForm = document.getElementById('sort-form');\r\n  const sortSelect = document.getElementById('sort');\r\n\r\n  // Function to reset the filter states\r\n  function resetFilterState() {\r\n    reusableCheckbox.checked = false;\r\n    recycleCheckbox.checked = false;\r\n  }\r\n\r\n  // Function to filter products\r\n  function filterProducts() {\r\n    const showReusable = reusableCheckbox.checked;\r\n    const showRecycle = recycleCheckbox.checked;\r\n\r\n    productCards.forEach(card => {\r\n      const hasReusable = card.querySelector('.recycle-icon img[src*=\"reusable\"]') !== null;\r\n      const hasRecycle = card.querySelector('.recycle-icon img[src*=\"recycle\"]') !== null;\r\n\r\n      // When both filters are selected, show products that match either filter\r\n      if (showReusable && showRecycle) {\r\n        if (hasReusable || hasRecycle) {\r\n          card.style.display = 'block';\r\n        } else {\r\n          card.style.display = 'none';\r\n        }\r\n      }\r\n      // When only the reusable filter is selected\r\n      else if (showReusable) {\r\n        if (hasReusable) {\r\n          card.style.display = 'block';\r\n        } else {\r\n          card.style.display = 'none';\r\n        }\r\n      }\r\n      // When only the recycle filter is selected\r\n      else if (showRecycle) {\r\n        if (hasRecycle && !hasReusable) { // Ensure only recycle is shown\r\n          card.style.display = 'block';\r\n        } else {\r\n          card.style.display = 'none';\r\n        }\r\n      }\r\n      // When no filter is selected, show all products\r\n      else {\r\n        card.style.display = 'block';\r\n      }\r\n    });\r\n  }\r\n\r\n  reusableCheckbox.addEventListener('change', filterProducts);\r\n  recycleCheckbox.addEventListener('change', filterProducts);\r\n\r\n  // Update hidden inputs and submit the form when sorting is applied\r\n  sortSelect.addEventListener('change', function() {\r\n    resetFilterState();\r\n    sortForm.submit();\r\n  });\r\n\r\n  // Submit the sort form asynchronously\r\n  sortForm.addEventListener('submit', function(event) {\r\n    event.preventDefault();\r\n    const formData = new FormData(sortForm);\r\n    const queryString = new URLSearchParams(formData).toString();\r\n    const url = `${window.location.pathname}?${queryString}`;\r\n\r\n    fetch(url, {\r\n      method: 'GET',\r\n      headers: {\r\n        'Content-Type': 'application/x-www-form-urlencoded'\r\n      }\r\n    })\r\n    .then(response => response.text())\r\n    .then(data => {\r\n      const parser = new DOMParser();\r\n      const doc = parser.parseFromString(data, 'text/html');\r\n      const newProductGrid = doc.querySelector('.product-grid');\r\n      document.querySelector('.product-grid').innerHTML = newProductGrid.innerHTML;\r\n\r\n      // Reset filters after sorting\r\n      resetFilterState();\r\n\r\n      // Reapply filters if any checkbox is checked\r\n      filterProducts();\r\n    })\r\n    .catch(error => console.error('Error:', error));\r\n  });\r\n});\r\n\r\n\r\n</script>\r\n  ",
  "components/faceted-search/facets/multi": "<div class=\"facet-filter-wrapper {{#unless start_collapsed}}is-open{{/unless}}\" data-facet-filter-wrapper>\n  <ul\n    id=\"faceted-search-nav-list-{{#replace ' ' facet}}{{else}}{{facet}}{{/replace}}\"\n    class=\"facet-list-items\n    facet-default\n    {{#if selected}}is-open{{/if}}\n    {{#if items_count '<' total_items}}has-additional-filters{{/if}}\"\n    data-count=\"{{items_count}}\"\n    data-facet=\"{{facet}}\"\n  >\n    {{#each items}}\n      <li class=\"facet-item {{#if selected}}selected-facet{{/if}}\" data-facet-item>\n        <a href=\"{{url}}\" rel=\"nofollow\" data-faceted-search-facet>\n          {{{title}}}\n          {{#if ../show_product_counts}}\n            <span data-facet-item-count>({{count}})</span>\n          {{/if}}\n        </a>\n      </li>\n    {{/each}}\n  </ul>\n\n  {{#if show_more_toggle}}\n    <a\n      href=\"#faceted-search-nav-list-{{#replace ' ' facet}}{{else}}{{facet}}{{/replace}}\"\n      role=\"button\"\n      class=\"facet-toggle-more\"\n      rel=\"nofollow\"\n      data-show-more-facets\n    >\n    <span class=\"facet-item toggle-link-text-off\">\n      {{lang 'faceted_search.show_more'}}\n      <svg class=\"icon icon-arrow-down\"><use xlink:href=\"#icon-arrow-down\" /></svg>\n    </span>\n    <span class=\"facet-item toggle-link-text-on\">\n      {{lang 'faceted_search.show_less'}}\n      <svg class=\"icon icon-arrow-up\"><use xlink:href=\"#icon-arrow-up\" /></svg>\n    </span>\n    </a>\n  {{/if}}\n</div>\n",
  "components/category/shop-by-brand": "{{#if shop_by_brand.length}}\n  <div class=\"sidebar-block shop-by-brand\">\n    <h4 class=\"facet-list-title\">{{lang 'category.shop_by_brand'}}</h4>\n    <ul>\n      {{#each shop_by_brand}}\n        {{#if @index '<' 5}}\n          <li class=\"facet-item\">\n            <a\n              class=\"{{#if selected}}is-active{{/if}}\"\n              rel=\"nofollow\"\n              href=\"{{url}}\"\n              alt=\"{{name}}\"\n            >\n              {{name}}\n            </a>\n          </li>\n        {{/if}}\n      {{/each}}\n      {{#if shop_by_brand.length '>' 5}}\n        <li class=\"facet-item\">\n          <a href=\"{{urls.brands}}\">{{lang 'footer.view_all'}}</a>\n        </li>\n      {{/if}}\n    </ul>\n  </div>\n{{/if}}\n",
  "components/faceted-search/facets/hierarchy": "<div class=\"facet-filter-wrapper {{#unless start_collapsed}}is-open{{/unless}}\" data-facet-filter-wrapper>\n  <ul\n    id=\"faceted-search-nav-list-{{#replace ' ' facet}}{{else}}{{facet}}{{/replace}}\"\n    class=\"facet-list-items\n    facet-default\n    {{#if selected}}is-open{{/if}}\n    data-count=\"{{items_count}}\"\n    data-facet=\"{{facet}}\"\n  >\n    {{#each items}}\n      <li class=\"facet-item\" data-facet-item>\n        <a href=\"{{url}}\" rel=\"nofollow\" data-faceted-search-facet>\n          {{{title}}}\n          {{#if ../show_product_counts}}\n            <span data-facet-item-count>({{count}})</span>\n          {{/if}}\n        </a>\n      </li>\n    {{/each}}\n  </ul>\n\n  {{#if show_more_toggle}}\n    <a\n      href=\"#faceted-search-nav-list-{{#replace ' ' facet}}{{else}}{{facet}}{{/replace}}\"\n      role=\"button\"\n      class=\"facet-toggle-more\"\n      rel=\"nofollow\"\n      data-show-more-facets\n    >\n    <span class=\"facet-item toggle-link-text-off\">\n      {{lang 'faceted_search.show_more'}}\n      <svg class=\"icon icon-arrow-down\"><use xlink:href=\"#icon-arrow-down\" /></svg>\n    </span>\n    <span class=\"facet-item toggle-link-text-on\">\n      {{lang 'faceted_search.show_less'}}\n      <svg class=\"icon icon-arrow-up\"><use xlink:href=\"#icon-arrow-up\" /></svg>\n    </span>\n    </a>\n  {{/if}}\n</div>\n",
  "components/category/shop-by-price": "{{#if shop_by_price}}\n  <div class=\"sidebar-block shop-by-price\">\n    <h4 class=\"facet-list-title\">{{lang 'category.shop_by_price'}}</h4>\n    <ul>\n      {{#each shop_by_price}}\n        <li class=\"facet-item\">\n          <a\n            class=\"{{#if selected}}is-active{{/if}}\"\n            rel=\"nofollow\"\n            href=\"{{url}}\"\n            alt=\"{{low.formatted}} - {{high.formatted}}\"\n          >\n            {{low.formatted}} - {{high.formatted}}\n          </a>\n        </li>\n      {{/each}}\n    </ul>\n    {{#any shop_by_price selected=true}}\n      <a href=\"{{category_url}}\" class=\"link facet-remove\">\n        {{lang 'category.reset'}}\n      </a>\n    {{/any}}\n  </div>\n{{/if}}\n",
  "components/faceted-search/facets/range": "<form class=\"facet-price {{#if selected}}is-open{{/if}} {{#unless start_collapsed}}is-open{{/unless}}\" method=\"get\" data-facet-filter-wrapper data-faceted-search-range>\n  {{#each current_selected_items}}\n    <input type=\"hidden\" name=\"{{param_name}}\" value=\"{{param_value}}\"/>\n  {{/each}}\n\n  <div class=\"form-field\">\n    <input\n      class=\"form-input form-input-short\"\n      name=\"min_price\"\n      min=\"0\"\n      type=\"number\"\n      value=\"{{min_price}}\"\n      placeholder=\"{{lang 'faceted_search.min_price'}}\"\n      required\n    />\n  </div>\n\n  <div class=\"form-field\">\n    <input\n      class=\"form-input form-input-short\"\n      name=\"max_price\"\n      min=\"0\"\n      type=\"number\"\n      value=\"{{max_price}}\"\n      placeholder=\"{{lang 'faceted_search.max_price'}}\"\n      required\n    />\n  </div>\n\n  <div class=\"form-actions\">\n    <button class=\"button button-tertiary\" type=\"submit\">\n      {{lang 'faceted_search.update'}}\n    </button>\n  </div>\n\n</form>\n",
  "components/faceted-search/facets/rating": "<ul\n  id=\"faceted-search-rating\"\n  class=\"facet-list-items\n    {{#if selected}}\n      is-open\n    {{/if}}\n    {{#unless start_collapsed}}\n      is-open\n    {{/unless}}\"\n  data-facet-filter-wrapper\n>\n  <li class=\"product-item-rating\" data-facet-item>\n    {{#for 1 5 items}}\n\n      {{#each this}}\n        {{#if param_value '==' ../$index}}\n          <a class=\"product-item-rating-facet {{#if ../selected '==' true}}full{{/if}}\" href=\"{{url}}\" rel=\"nofollow\" data-faceted-search-facet>\n        {{/if}}\n      {{/each}}\n\n      <svg class=\"icon icon-star \"><use xlink:href=\"#icon-star\" /></svg>\n\n      {{#each this}}\n        {{#if param_value '==' ../$index}}\n          </a>\n        {{/if}}\n      {{/each}}\n\n    {{/for}}\n\n    {{#each items}}\n      {{#if selected '==' true}}\n        <p class=\"selected-rating\">{{param_value}} {{lang 'faceted_search.stars'}}</p>\n      {{/if}}\n    {{/each}}\n  </li>\n</ul>\n"
}
