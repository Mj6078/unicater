{
  "components/products/additional-info": "<div class=\"table-container\">\n<div class=\"new-container roll\">\n  <table class=\"new-product-details-table\">\n    <tbody>\n      {{#if product.warranty}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.warranty'}}:</td>\n        <td class=\"new-product-details-value\">{{product.warranty}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.sku}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.sku'}}:</td>\n        <td class=\"new-product-details-value\">{{product.sku}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.condition}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.condition'}}:</td>\n        <td class=\"new-product-details-value\">{{product.condition}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.release_date}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.release_date'}}:</td>\n        <td class=\"new-product-details-value\">{{product.release_date}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.availability}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.availability'}}:</td>\n        <td class=\"new-product-details-value\">{{product.availability}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if theme_settings.product-dimensions}}\n      {{#if product.weight}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.weight'}}:</td>\n        <td class=\"new-product-details-value\" data-product-weight>{{product.weight}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.height}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.height'}}:</td>\n        <td class=\"new-product-details-value\">{{product.height}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.width}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.width'}}:</td>\n        <td class=\"new-product-details-value\">{{product.width}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.depth}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.depth'}}:</td>\n        <td class=\"new-product-details-value\">{{product.depth}}</td>\n      </tr>\n      {{/if}}\n      {{/if}}\n\n      {{#if product.gift_wrapping_available}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.gift_wrapping'}}:</td>\n        <td class=\"new-product-details-value\">{{lang 'product.gift_wrapping_available'}}</td>\n      </tr>\n      {{/if}}\n\n      {{#if product.shipping}}\n      {{#if product.shipping.calculated}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.shipping'}}:</td>\n        <td class=\"new-product-details-value\">{{lang 'product.shipping_calculated'}}</td>\n      </tr>\n      {{else}}\n      {{#if (equal product.shipping.price 0)}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.shipping'}}:</td>\n        <td class=\"new-product-details-value\">{{lang 'product.shipping_free'}}</td>\n      </tr>\n      {{else}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{lang 'product.shipping'}}:</td>\n        <td class=\"new-product-details-value\">{{lang 'product.shipping_fixed' amount=product.shipping.price.formatted}}</td>\n      </tr>\n      {{/if}}\n      {{/if}}\n      {{/if}}\n\n      {{#each product.custom_fields}}\n      <tr class=\"new-product-row\">\n        <td class=\"new-product-details-name\">{{name}}:</td>\n        <td class=\"new-product-details-value\">{{value}}</td>\n      </tr>\n      {{/each}}\n    </tbody>\n  </table>\n</div>\n</div>\n\n\n\n<style>\n.table-container {\n  width: 750PX;\n  display: flex;\n  justify-content: center; /* Center the container horizontally */\n}\n\n.new-container {\n  width: 100%; /* Adjust width as needed */\n}\n\n.new-product-details-table {\n  width: 100%;\n  border-collapse: collapse;\n}\n\n.new-product-details-name {\n  font-weight: bold;\n  color: #000;\n  padding: 8px;\n  border-bottom: 1px solid #ddd;\n}\n\n.new-product-details-value {\n  padding: 8px;\n  border-bottom: 1px solid #ddd;\n}\n\n.new-product-row:nth-child(even) {\n  background-color: #f2f2f2; /* Even row color */\n}\n\n</style>\n"
}
